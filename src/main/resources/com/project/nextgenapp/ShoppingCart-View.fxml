<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #8ced24;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.nextgenapp.ShoppingCartController">
    <children>
        <MenuBar>
            <menus>
                <Menu text="Next Gen A">
                    <items>
                        <MenuItem text="Home" />
                        <MenuItem text="Shopping Cart" />
                        <MenuItem text="Logout" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <Label fx:id="payNowLabel" layoutX="250.0" layoutY="50.0" text="Pay Now" />
        <FlowPane fx:id="descriptionFlowPane" layoutX="50.0" layoutY="100.0" prefHeight="200.0" prefWidth="500.0">
            <children>
                <Label text="Description..." />
            <ImageView fx:id="cartItemsLabel" fitHeight="152.0" fitWidth="124.0" pickOnBounds="true" preserveRatio="true" />
                <Label text="Description" />
                <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" text="Description" />
            </children>
        </FlowPane>
        <Button fx:id="removeItemButton1" layoutX="50.0" layoutY="300.0" text="Remove Item" />
        <Button fx:id="removeItemButton2" layoutX="250.0" layoutY="300.0" text="Remove Item" />
        <Button fx:id="removeItemButton3" layoutX="450.0" layoutY="300.0" text="Remove Item" />
    </children>
</AnchorPane>
